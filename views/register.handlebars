<div class="j-container j-padding-32" id="register">
    <h3 class="j-border-bottom j-border-light-grey j-padding-16">Create account</h3>
<section>

    <form action="/login" method="POST">

        <label for="custName">Your Name</label>
        <input class="j-input j-border" type="text" id="custName" name="custName"> <br>

        <label for="email">Email</label>
        <input class="j-input j-section j-border" type="email" id="email" name="email"> <br>

        <label for="psw">PassWord</label>
        <input class="j-input j-section j-border" type="password" placeholder="Enter Password" name="psw"><br><br>
        <p>Passwords must consist of at least 6 characters.</p>

        <label for="psw">PassWord again</label>
        <input class="j-input j-section j-border" type="password" placeholder="Enter Password" name="psw"><br><br>

        <input class="j-input j-section j-border" type="submit" value="Create your Amazon account">
        <p>By creating an account, you agree to Amazon's Conditions of Use and Privacy Notice.</p>

    </form>
    <p>Already have an account? <a href="/login">Sign in</a></p>
</section>

<!-- Will only show if the errors array exists-->
{{#each errors}}
    <div class="j-error" >{{this}}</div>
{{/each}}

<!--This will only show if the successMessage was injected into the view -->
<div>{{successMessage}}</div>
</div>