<div class="j-container j-padding-32">
    <h3 class="j-border-bottom j-border-light-grey j-padding-head">Product Dashboard</h3>
        
        <section class="tasks-container">

            <form method="POST" action="/product/search">
                <label>Search By</label>
                <select name="product-search">
                        <option value="all">All products</option>
                </select>
                <input type="submit" value="Search">
            </form> <br><br>

            <table border="1">
                <thead>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>description</th>
                        <th>Operation</th>
                </thead>
                <tbody>
                    {{#each data}}
                        <tr>
                        <td>
                            <img src="/upload/{{this.productPic}}"> 
                        </td>
                        <td>
                            <span>{{this.name}}</span>
                        </td>
                        <td>
                            <span>{{this.price}}</span>
                        </td>
                        <td>
                            <span>{{this.quantity}}</span>
                        </td>
                        <td>
                            <span>{{this.description}}</span>
                        </td>
                        <td>
                                <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                                <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                        </td> 
                        </tr>

                        {{else}}
                            <td colspan="6">
                                <p>No products in the database</p>
                            </td>

                        {{/each}}
            </tbody>
            </table>
        
        </section>

        <div id="tasks-links-holder">
            <a href="/product/add">Add product</a>
        </div>
</div>