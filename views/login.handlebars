<div class="main">
    
<!-- Will only show if the errors array exists-->
{{#each errors}}
    <div class="error" >{{this}}</div>
{{/each}}

<!--This will only show if the successMessage was injected into the view -->
<div>{{successMessage}}</div>
<div class="container">
<section>
    <form action="/login" method="POST">

        <label for="email">Email</label>
        <input type="email" id="email" name="email" required=""> <br>

        <label for="psw">PassWord</label>
        <input type="password" placeholder="At least 6 characters" name="psw" required=""><br><br>
        <p>Passwords must consist of at least 6 characters.</p>

        <input type="submit" value="Login">

    </form>

    <form action="/register" method="get" target="_blank">
         <input type="submit" value="Create your Amazon account">
    </form>
</section>
</div>
</div>