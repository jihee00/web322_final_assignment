<div class="j-container j-padding-32">
    <h3 class="j-border-bottom j-border-light-grey j-padding-head">Cart</h3><br>

    <section id="cart">
        <br>
        <div>
        <h1>Shopping Cart</h1>
        <br>
        <h2 class="errorMessage">{{err}}</h2>
                    {{#if products}}
                        {{#each products}}
                            <div class="products-box">
                                    <div>
                                        <div>
                                            <br><br>
                                            <h3>{{this.name}}</h3>
                                            <h3>Total: ${{this.price}}</h3>
                                            <h3>Quantity:   {{#with (lookup ../products_qty @index)}} {{this}} {{/with}}</h3>
                                        </div>
                                        <div class="col-3">
                                            <a href="{{this.link}}"><img src="/img/{{this.productPic}}"></a>
                                        </div>
                                    </div>
                                </div>
                        {{/each}}
                        <br><br>
                        <h3>Total items: {{total_items}}</h3>
                        <h3>Your total is : ${{total_amount}}</h3>
                        <br>
                        <div>
                            <form method="POST" action="/checkout">
                                <p>
                                    <input type="submit" value="Place an Order">
                                </p>
                            </form>
                        </div>
                    
                    {{else}}
                    <br>
                        <a href="/Product/list">Shop Now</a>
                    {{/if}}
        </div>
    </section>
</div>